C MTCONV    SOURCE    CB215821  19/03/18    21:15:43     10161
      SUBROUTINE MTCONV(type4,IVALI4,IVALI8,XVALI4,XVALI8,XVALOU,ITAIL)

CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C     MTCONV : MED TYPE CONVERSION
C              Cette SUBROUTINE permet de convertir des types issus de
C              MED 3.x.x en REAL*8 pour Cast3M
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC

-INC CCMED
-INC CCOPTIO

        INTEGER*4   type4
        INTEGER     ITAIL
C       Si MED nous a donne des INTEGER*4
        INTEGER*4   IVALI4(ITAIL)
C       Si MED nous a donne des INTEGER*8
        INTEGER     IVALI8(ITAIL)
C       Si MED nous a donne des REAL*4
        REAL*4      XVALI4(ITAIL)
C       Si MED nous a donne des REAL*8
        REAL*8      XVALI8(ITAIL)
C       Restitution dans    des REAL*8
        REAL*8      XVALOU(ITAIL)
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC

        IF    (type4 .EQ. MED_INT32)THEN
C         Cas des MED_INT32
          DO II=1,ITAIL
            XVALOU(II)=IVALI4(II)
          ENDDO
        ELSEIF(type4 .EQ. MED_INT64)THEN
C         Cas des MED_INT64
          DO II=1,ITAIL
            XVALOU(II)=IVALI8(II)
          ENDDO
        ELSEIF(type4 .EQ. MED_FLOAT32)THEN
C         Cas des MED_FLOAT32
          DO II=1,ITAIL
            XVALOU(II)=XVALI4(II)
          ENDDO
        ELSEIF(type4 .EQ. MED_FLOAT64)THEN
C         Cas des MED_FLOAT64
          DO II=1,ITAIL
            XVALOU(II)=XVALI8(II)
          ENDDO
        ELSE
          INTERR(1)=type4
          CALL ERREUR(1095)
        ENDIF
      END

