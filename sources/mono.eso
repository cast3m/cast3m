C MONO      SOURCE    PV        05/09/22    21:21:31     5181
C   NOMMER UN POINT
C
      SUBROUTINE MONO(XPROJ,IVU,IDCP)
      IMPLICIT INTEGER(I-N)
      COMMON /CMODI/LIGMAX,XPREC,YPREC
      CHARACTER*8 ZONE
      SEGMENT XPROJ(3,ITE)
      SEGMENT IVU(0)
      SEGMENT IDCP(0)
      CALL TRMESS('POINTEZ LE POINT A NOMMER')
  30  CONTINUE
      CALL mopf3
      CALL TRDIG(X,Y,INCLE)
      IF (INCLE.EQ.3) RETURN
*  CHERCHER LE POINT DU MAILLAGE
      NBP=XPROJ(/2)
      CRIT=XPREC**2
      DO 10 IP=1,NBP
      IF (IVU(IP).NE.1) GOTO 10
      DIST=(XPROJ(1,IP)-X)**2+(XPROJ(2,IP)-Y)**2
      IF (DIST.LT.CRIT) GOTO 20
  10  CONTINUE
      GOTO 30
  20  CONTINUE
      CALL TRGET('DONNEZ LE NOM DU POINT : ',ZONE)
      INUM=IDCP(IP)
      CALL NOMOBJ('POINT',ZONE,INUM)
      CALL CHCOUL(6)
      call insegt(4,iresu)
      CALL TRLABL(XPROJ(1,IP),XPROJ(2,IP),0.,ZONE,8,0.15)
      END


