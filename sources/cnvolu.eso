C CNVOLU    SOURCE    CHAT      05/01/12    22:12:05     5004
      SUBROUTINE CNVOLU(SIGNA,RESP,SIGRES,N,M)
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8(A-H,O-Z)
C
C     SATELLITE DE CALCUL DE CVOL
C
C     EFFECTUE LA CONVOLUTION SUR N POINTS DE
C     SIGNA (MM+N+MP) PAR RESP (MP+MM) DANS
C     SIGRES(N).
C
C     LE "ZERO PADDING" OU LA CONDITION DE
C     SYMETRIE SONT IMPLEMENTES A L'AMONT.
C
C     WARNING: L'ESPACEMENT DES POINTS EST
C
      DIMENSION SIGNA(1),RESP(M),SIGRES(N)
C
      DO 2 IE1=1,N
        SIGRES(IE1)=0.D0
        DO 1 IE2=1,M
          SIGRES(IE1)=SIGRES(IE1)+SIGNA(IE2+IE1-1)*RESP(IE2)
 1      CONTINUE
 2    CONTINUE
      RETURN
      END

