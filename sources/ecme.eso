C ECME      SOURCE    CHAT      05/01/12    23:24:02     5004
      SUBROUTINE ECME(ITABLE,MOTI,IVAL)
C
C ECRIRE UN ENTIER DESIGNE PAR UN MOT
C
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8(A-H,O-Z)
      CHARACTER*(*) MOTI
      CHARACTER*8 BLAN,MOT
      DATA BLAN/'        '/
      MOT=MOTI
      CALL LENCHA(MOT,LC)
      CALL ECCTAB(ITABLE,'MOT',0,      0.D0,MOT(1:LC), .TRUE.,0,
     1                   'ENTIER',IVAL,0.D0,BLAN,.TRUE.,0)
      RETURN
      END

