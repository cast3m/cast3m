C NBEL      SOURCE    BP208322  16/11/18    21:19:31     9177
C   REND LE NOMBRE D'ELEMENTS D'UN OBJET
C
      SUBROUTINE NBEL
      IMPLICIT INTEGER(I-N)
-INC CCOPTIO
-INC CCGEOME
-INC SMELEME
-INC SMLMOTS
-INC SMLENTI
      CHARACTER*4 LETYP
      CALL LIROBJ('MAILLAGE',MELEME,1,IRETOU)
      IF (IERR.NE.0) RETURN
      CALL LIROBJ('LISTMOTS',MLMOTS,0,ISPRA)
      SEGACT MELEME
*
      IF(ISPRA.NE.0) GO TO 3
      NBL=0
      IPT1=MELEME
      DO 2 I=1,MAX(1,LISOUS(/1))
      IF (LISOUS(/1).NE.0) THEN
       IPT1=LISOUS(I)
       SEGACT IPT1
      ENDIF
      NBL=NBL+IPT1.NUM(/2)
      IF (LISOUS(/1).NE.0) SEGDES IPT1
   2  CONTINUE
      SEGDES MELEME
      CALL ECRENT(NBL)
      RETURN
*
   3  CONTINUE
      SEGACT MLMOTS
      JG=MOTS(/2)
      SEGINI MLENTI
      IPT1=MELEME
      DO 4 I=1,MAX(1,LISOUS(/1))
      IF (LISOUS(/1).NE.0) THEN
       IPT1=LISOUS(I)
       SEGACT IPT1
      ENDIF
      LETYP=NOMS(IPT1.ITYPEL)
      DO 5 IJ=1,JG
      IF(LETYP.NE.MOTS(IJ)) GO TO 5
      LECT(IJ)=LECT(IJ)+IPT1.NUM(/2)
      GO TO 6
   5  CONTINUE
   6  IF (LISOUS(/1).NE.0) SEGDES IPT1
   4  CONTINUE
      SEGDES MELEME,MLENTI,MLMOTS
      CALL ECROBJ('LISTENTI',MLENTI)
      RETURN
      END









