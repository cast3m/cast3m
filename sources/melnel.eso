C MELNEL    SOURCE    CHAT      05/01/13    01:42:23     5004
      SUBROUTINE MELNEL(IEL,MELEME,IPT1,NEL0,IACT)
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C     RECHERCHE LE BON SOUS MAILLAGE POUR L ELEMENT IEL
C       NEL0 NOMBRE D ELEMENTS AVANT LE SOUS MAILLAGE A CONSIDERER
C
C     IACT = 0 TOUS LES SEGMENTS DU  MAILLAGE SAUF IPT1
C                                         SONT DESACTIVES EN SORTI
C     IACT = 1 TOUS LES SEGMENTS DU  MAILLAGE  SONT ACTIFS EN SORTI
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8 (A-H,O-Z)
-INC SMELEME
C
      SEGACT MELEME
      NEL0=0
      IPT1=MELEME
      NBSOUS=LISOUS(/1)
      IF(NBSOUS.NE.0)THEN
           DO 10 ISOU=1,NBSOUS
                IPT1=LISOUS(ISOU)
                SEGACT IPT1
                NEL=IPT1.NUM(/2)
                IF(NEL+NEL0.GE.IEL)GO TO 15
                NEL0=NEL+NEL0
                IF(IACT.EQ.0)SEGDES IPT1
   10      CONTINUE
      ENDIF
   15 CONTINUE
      END

