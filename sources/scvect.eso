C SCVECT    SOURCE    CHAT      05/01/13    03:13:01     5004
      FUNCTION SCVECT(U,V,N)
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8(A-H,O-Z)
      DIMENSION U(N),V(N)
C
C-----------------------------------------------------
C     CALCUL DE LE PRODUIT SCALAIRE DE 2 VECTEURS
C     DE DIMENSION EGALE QUELCONQUE
C     SCVECT=U.V
C-----------------------------------------------------
C
      SCVECT=0.D0
      DO IE1=1,N
        SCVECT=SCVECT+U(IE1)*V(IE1)
      ENDDO
C
      RETURN
      END


