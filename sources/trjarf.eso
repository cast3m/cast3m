C TRJARF    SOURCE    CHAT      05/01/13    03:48:35     5004
      SUBROUTINE TRJARF(NAR,NF1,NF2,ITP)
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C    CHERCHE LES NUMEROS DE FACES QUI CORRESPONDENT A UNE ARETE
C    DANS L ELEMENT DE REFERENCE
C
C    E   NAR NUMERO DE L'ARETE
C    S   NF1 NF2 NUMEROS DES FACES ADJACENTES A CETTE ARETE
C    E   ITP TYPE DE L'ELEMENT
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8 (A-H,O-Z)
C
C
C
      DIMENSION NFC8(2,12),NFP6(2,9), NFT4(2,6)
      DATA NFC8/6,1, 1,4, 4,2, 2,6, 3,1, 1,5, 5,2, 2,3,
     * 6,3, 3,4, 4,5, 5,6 /
      DATA NFP6/1,5, 5,2, 1,3, 3,2, 1,4, 4,2, 5,3, 3,4, 4,5 /
      DATA NFT4/1,2, 2,4, 4,1, 2,3, 3,4, 1,3/
C
C
C***  PRISMES
C
            IF(ITP.EQ.16)THEN
                 NF1=NFP6(1,NAR)
                 NF2=NFP6(2,NAR)
C
C***  CUBES
C
            ELSEIF(ITP.EQ.14)THEN
                 NF1=NFC8(1,NAR)
                 NF2=NFC8(2,NAR)
C
C***  TETRAEDRE
C
            ELSEIF(ITP.EQ.23)THEN
                 NF1=NFT4(1,NAR)
                 NF2=NFT4(2,NAR)
          ELSE
              CALL ERREUR(16)
          ENDIF
C
      RETURN
      END


