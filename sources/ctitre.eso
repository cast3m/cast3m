C CTITRE    SOURCE    CHAT      05/01/12    22:32:05     5004
C  ECRITURE DU TEXTE ENCADRE PAR DES ETOILES

      SUBROUTINE CTITRE(TEXTE)
C
      IMPLICIT INTEGER(I-N)
-INC CCOPTIO
      CHARACTER*(*) TEXTE
      CHARACTER BLAN
      CHARACTER*105 BUFF
      CHARACTER*76 STAR
      PARAMETER (BLAN=' ')
      PARAMETER (STAR='*************************************************
     #**************************')
      NN=MIN(72,LEN(TEXTE))
      DO 10 I=NN,1,-1
      IF (TEXTE(I:I).NE.BLAN) GOTO 20
  10  CONTINUE
  20  CONTINUE
      NN=I
C
      BUFF=BLAN
      NDEV=(132-NN-4)/2
      BUFF(NDEV+1:NDEV+NN+4)=STAR
      WRITE (IOIMP,999)
 999  FORMAT (//)
      WRITE (IOIMP,1000) BUFF
 1000 FORMAT (1X,A105)
      BUFF(NDEV+2:NDEV+NN+3)=BLAN
      WRITE (IOIMP,1000) BUFF
      BUFF(NDEV+3:NDEV+NN+2)=TEXTE(1:NN)
      WRITE (IOIMP,1000) BUFF
      BUFF(NDEV+2:NDEV+NN+3)=BLAN
      WRITE (IOIMP,1000) BUFF
      BUFF(NDEV+1:NDEV+NN+4)=STAR
      WRITE (IOIMP,1000) BUFF
      WRITE (IOIMP,999)
      END

