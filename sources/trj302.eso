      SUBROUTINE TRJ302(XYZL,ZXY,XYREF)
C
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C     CALCUL DES COORDONNEES DE REFERENCES DANS UN TRI3
C     XYZL COORDONNEES DES SOMMETS
C     ZXY               REELLES
C     XYREF             REFERENCES
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C
C
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8 (A-H,O-Z)
C
      DIMENSION XYZL(2,3),ZXY(2),XYREF(2)
C
C
      A1=XYZL(1,2)*XYZL(2,3)-XYZL(1,3)*XYZL(2,2)
      A2=XYZL(1,3)*XYZL(2,1)-XYZL(1,1)*XYZL(2,3)
      A3=XYZL(1,1)*XYZL(2,2)-XYZL(1,2)*XYZL(2,1)
C
C
      DEL=A1+A2+A3
C
      XYREF(1)=(A2+(XYZL(2,3)-XYZL(2,1))*ZXY(1)
     *            +(XYZL(1,1)-XYZL(1,3))*ZXY(2))/DEL
      XYREF(2)=(A3+(XYZL(2,1)-XYZL(2,2))*ZXY(1)
     *            +(XYZL(1,2)-XYZL(1,1))*ZXY(2))/DEL
C
C
      RETURN
C
      END

