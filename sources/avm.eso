C AVM       SOURCE    CHAT      05/01/12    21:30:40     5004
      FUNCTION AVM(S,DS)
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8 (A-H,O-Z)
      DIMENSION S(*),DS(*)
      XX=0.5D0*((S(1)-S(2))*(DS(1)-DS(2))+(S(2)-S(3))*(DS(2)-DS(3))
     .+(S(3)-S(1))*(DS(3)-DS(1)))
      YY=3.D0*(S(4)*DS(4)+S(5)*DS(5)+S(6)*DS(6))
      AVM=XX+YY
      RETURN
      END


