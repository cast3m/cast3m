C CHMCRC    SOURCE    CHAT      05/01/12    21:58:44     5004
      SUBROUTINE CHMCRC(MLMOTS,IGEOT,NPN,MCHPOI,MPOVAL)
      IMPLICIT INTEGER(I-N)
        IMPLICIT REAL*8 (A-H,O-Z)
C------------------------------------------------------------------
C
C       CREATION D'UN CHPOINT POUR LES SORTIES DE CHIMI2
C
C   ENTREES :
C         MLMOTS POINTEUR LE LA LISTE DES NOMS DES COMPOSANTES
C         IGEOT  POINTEUR DE LA GEOMETRIE
C         NPN    NOMBRE DE POINTS
C   SORTIES :
C         MCHPOIN POINTEUR DU CHPOIN CREE
C         MPOVAL POINTEUR DU TABLEAU DE VALEURS DE CE CHPOINT
C
C------------------------------------------------------------------
-INC SMCHPOI
-INC SMLMOTS
-INC CCOPTIO
      NSOUPO=1
      NAT=1
      SEGINI MCHPOI
      MTYPOI='        '
      MOCHDE='      CHPOIN CREE PAR CHIMI2                      '
      IFOPOI=IFOUR
      JATTRI(1)=2
      SEGACT MLMOTS
      NC=MOTS(/2)
      SEGINI MSOUPO
      IPCHP(1)=MSOUPO
      DO 10 I=1,NC
            NOCOMP(I)=MOTS(I)
            NOHARM(I)=0
   10 CONTINUE
      IGEOC=IGEOT
      N=NPN
      SEGINI MPOVAL
      IPOVAL=MPOVAL
      NB=N*NC
      CALL INITD(VPOCHA,NB,0.D0)
      RETURN
      END



