C ACML      SOURCE    CHAT      05/01/12    21:15:50     5004
      SUBROUTINE ACML(ITABLE,MOTI,XLOGI)
C-----------------------------------------------------------------------
C Récupération d'un LOGIQUE stocké à un indice de type MOT d'une TABLE.
C-----------------------------------------------------------------------
C
C------------------------
C Opérandes et résultat :
C------------------------
C
C E/  ITABLE : Table
C E/  MOTI   : Indice de type MOT indexant l'objet cherché
C  /S XLOGI  : LOGIQUE contenu dans la table ITABLE à l'indice MOT MOTI
C
C-----------------------------------------------------------------------
C ATTENTION : L'indice MOTI est un mot d'au plus
C             8 caractères (sinon voir ACCTAB). Les blancs à la fin de
C             MOTI sont ignorés ('mot sb  ' est transformé en 'mot sb')
C-----------------------------------------------------------------------
      IMPLICIT INTEGER(I-N)
      IMPLICIT REAL*8(A-H,O-Z)
      LOGICAL XLOGI
      CHARACTER*(*) MOTI
      CHARACTER*8 TYPE,MOT1
C
C      MOT  = MOTI
      TYPE = 'LOGIQUE '
      CALL LENCHA(MOTI,LC)
      CALL ACCTAB(ITABLE,'MOT     ',0,0.D0,MOTI(1:LC),XLOGI,0,
     1                    TYPE,IENT,XVAL,MOT1,XLOGI,IRET)
      RETURN
      END


