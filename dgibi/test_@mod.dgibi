interact= VRAI ;
'OPTION' 'DIME' 3 'ELEM' CUB8  ;
'SI' ('NON' interact) ;
  'OPTION' 'TRAC' 'PS' ;
'SINON' ;
  'OPTION' 'TRAC' 'X' ;
'FINSI' ;

* Scalaires
* =========

* deux entiers
a = @MOD 13 2 ;
'SI' (('NEG' a 1) 'OU' ('NEG' ('TYPE' a) 'ENTIER'));
  'ERREUR' 5 ;
'FINSI' ;

* un entier, un réel
a = @MOD 13 2. ;
'SI' (('NEG' a 1) 'OU' ('NEG' ('TYPE' a) 'FLOTTANT'));
  'ERREUR' 5 ;
'FINSI' ;

* un réel, un entier
a = @MOD 13. 2 ;
'SI' (('NEG' a 1) 'OU' ('NEG' ('TYPE' a) 'FLOTTANT'));
  'ERREUR' 5 ;
'FINSI' ;

* deux réels
a = @MOD 13. 2. ;
'SI' (('NEG' a 1) 'OU' ('NEG' ('TYPE' a) 'FLOTTANT'));
  'ERREUR' 5 ;
'FINSI' ;

* listes
* ======

* une liste d'entier, un entier
a = 'EXTR' (@MOD ('LECT' -2 'PAS' 1 2) 2) 1 ;
'SI' (('NEG' a 0) 'OU'  ('NEG' ('TYPE' a) 'ENTIER'));
  'ERREUR' 5 ;
'FINSI' ;

* une liste de réels, un scalaire
a = 'EXTR' (@MOD ('PROG' -2. 'PAS' 1 2.) 2.) 1 ;
'SI' (('NEG' a 0) 'OU'  ('NEG' ('TYPE' a) 'FLOTTANT'));
  'ERREUR' 5 ;
'FINSI' ;

* deux listes d'entiers
a = 'EXTR' (@MOD ('LECT' -2 'PAS' 1 2) ('LECT' 5*2)) 1 ;
'SI' (('NEG' a 0) 'OU'  ('NEG' ('TYPE' a) 'ENTIER'));
  'ERREUR' 5 ;
'FINSI' ;

* deux listes de réels
a = 'EXTR' (@MOD ('PROG' -2. 'PAS' 1 2.) ('PROG' 5*2.)) 1 ;
'SI' (('NEG' a 0) 'OU'  ('NEG' ('TYPE' a) 'FLOTTANT'));
  'ERREUR' 5 ;
'FINSI' ;

